---
import HeaderButton from "./HeaderButton.astro";
const currentPath = Astro.url.pathname;
const locale = Astro.props.locale;
const t = Astro.props.t;
---

<header class="py-8 px-4 mx-auto max-w-xl lg:py-16 lg:px-6 relative">
  <!-- Padding arriba y abajo de 8, horizontal de 4  -->
  <div class="mk-auto text-center mb-8 lg:mb-16">
    <a href="/">
      <h1
        class="mb-4 text-5xl tracking-tight font-extrabold text-black/80 dark:text-white"
      >
        FreeRePers
      </h1>
    </a>
    <p class="font-Light text-gray-500 sm:text-xl dark:text-gray-400">
      {t("header.subtitle", locale)}
    </p>
  </div>
  <nav
    class="flex flex-col items-center justify-between w-full text-center md:flex-row"
  >
    <HeaderButton class={`text-white`} href={`/?lang=${locale}`}>
      <svg
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="icon icon-tabler icons-tabler-outline icon-tabler-icons"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M6.5 6.5m-3.5 0a3.5 3.5 0 1 0 7 0a3.5 3.5 0 1 0 -7 0"></path><path
          d="M2.5 21h8l-4 -7z"></path><path d="M14 3l7 7"></path><path
          d="M14 10l7 -7"></path><path d="M14 14h7v7h-7z"></path></svg
      >{t("header.icons", locale)}</HeaderButton
    >
    <HeaderButton class="text-white" href={`fonts?lang=${locale}`}>
      <svg
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="icon icon-tabler icons-tabler-outline icon-tabler-letter-case-toggle"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M6.5 15.5m-3.5 0a3.5 3.5 0 1 0 7 0a3.5 3.5 0 1 0 -7 0"></path><path
          d="M14 19v-10.5a3.5 3.5 0 0 1 7 0v10.5"></path><path d="M14 13h7"
        ></path><path d="M10 12v7"></path></svg
      >{t("header.fonts", locale)}</HeaderButton
    >
    <HeaderButton class="text-white" href={`libraries?lang=${locale}`}>
      <svg
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="icon icon-tabler icons-tabler-outline icon-tabler-books"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M5 4m0 1a1 1 0 0 1 1 -1h2a1 1 0 0 1 1 1v14a1 1 0 0 1 -1 1h-2a1 1 0 0 1 -1 -1z"
        ></path><path
          d="M9 4m0 1a1 1 0 0 1 1 -1h2a1 1 0 0 1 1 1v14a1 1 0 0 1 -1 1h-2a1 1 0 0 1 -1 -1z"
        ></path><path d="M5 8h4"></path><path d="M9 16h4"></path><path
          d="M13.803 4.56l2.184 -.53c.562 -.135 1.133 .19 1.282 .732l3.695 13.418a1.02 1.02 0 0 1 -.634 1.219l-.133 .041l-2.184 .53c-.562 .135 -1.133 -.19 -1.282 -.732l-3.695 -13.418a1.02 1.02 0 0 1 .634 -1.219l.133 -.041z"
        ></path><path d="M14 9l4 -1"></path><path d="M16 16l3.923 -.98"
        ></path></svg
      >
      {t("header.libraries", locale)}</HeaderButton
    >
  </nav>
  <div class="absolute top-4 right-0 z-10">
    <form method="get" action="" class="inline-block">
      <select
        name="lang"
        onchange="this.form.submit()"
        class="bg-gray-900 border border-gray-700 text-white text-xs rounded-md focus:ring-violet-500 focus:border-violet-500 block w-full p-1.5 transition-colors duration-150 shadow-sm hover:border-violet-400 min-w-[80px]"
        aria-label="Select language"
        style="min-width: 80px;"
      >
        <option value="en" selected={locale === "en"}>English</option>
        <option value="es" selected={locale === "es"}>Español</option>
        <option value="va" selected={locale === "va"}>Valencià</option>
      </select>
    </form>
  </div>
</header>
