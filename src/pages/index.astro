---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
import { getIcons } from "../services/icons";

const icons = await getIcons();
---

<Layout title="Free Icons Resources">
    <div class="flex flex-col items-center justify-start">
        <h2 class="text-white text-3xl font-bold mb-8">Icons</h2>
        <div class="grid gap-16 sm:grid-cols-2 lg:grid-cols-3">
            {
                icons.map(({ name, url_photo, alt, link }) => (
                    <Card name={name} url_photo={url_photo} alt={alt} url_link={link} />
                ))
            }
        </div>
    </div>
</Layout>