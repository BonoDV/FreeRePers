---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
import { getFonts } from "../services/fonts";
import { getLocaleFromUrl, t } from "../services/i18n";
const locale = getLocaleFromUrl(Astro.url);
const fonts = await getFonts();
---

<Layout title="Free Icons Resources">
  <div class="flex flex-col items-center justify-start">
    <h2 class="text-black/80 dark:text-white text-3xl font-bold mb-8">
      {t("header.fonts", locale)}
    </h2>
    <div class="grid gap-16 sm:grid-cols-2 lg:grid-cols-3">
      {
        fonts.map(({ name, url_photo, alt, link }) => (
          <Card name={name} url_photo={url_photo} alt={alt} url_link={link} />
        ))
      }
    </div>
  </div>
</Layout>
